<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Learn Uyghur Alphabets</title>
    <link href="/css/style.css" rel="stylesheet">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        // Select all letter elements
        const letters = document.querySelectorAll(".letter");

        // Loop through each letter
        letters.forEach(letter => {
          let audioPath = letter.dataset.audio; // Get audio path from data attribute

          // Create an audio object for the hover 
          const audio = new Audio(audioPath);

          // Play the audio when the letter is hovered over
          letter.addEventListener("mouseover", () => {
            audio.currentTime = 0; // Reset to the start
            audio.play();
          });

          // Stop the audio when the mouse leaves the letter
          letter.addEventListener("mouseleave", () => {
            audio.pause();
          });
        });
      });
    </script>


  </head>

  <body>
    <div id="wrapper">
      <!--Navigation Bar -->
      <header class="bg-blue-400 text-white sticky top-0 z-50">
          <div class="flex justify-between items-center p-4">

              <h1 class="text-2xl font-bold hover:text-yellow-100" >
                <a href="/">
                  Learn Uyghur Alphabets
                </a>
              </h1>

              <h1 class="text-2xl font-bold hover:text-yellow-100" dir="rtl">
                <a href="/">
                  ئۇيغۇرچە ھەرىپلەرنى ئ‍ۆگىنەيلى
                </a>
              </h1>

          </div>
      </header>
      

      <!--option list-->
      <div id="control">
        <div class="option-list">
          <div class="option-button">

            <div>
              <a href="/vowels">
                <button class="bg-blue-400 text-white font-bold py-2 px-4 rounded hover:bg-blue-600 mr-10">
                  Vowels
                </button>
              </a>
            </div>

            <div>
              <a href="/consonents">
                <button class="bg-blue-400 text-white font-bold py-2 px-4 rounded hover:bg-blue-600">
                  Consonents
                </button>
              </a>
            </div>

          </div>

          <div class="option-text">

            <div class="text-blue-400 text-2xl font-bold mr-4">
              <em>
                (The Alphabet)
              </em>
            </div>
            
              <div class="text-blue-500 text-2xl font-bold">
                ئېلىپبە
              </div>

          </div>

        </div>
      </div>


      <main>
        <%= yield %>
      </main>


      <footer class="bg-blue-400 text-white text-center py-2">
        &copy; 2024 Learn Uyghur Alphabets. All rights reserved.
      </footer>
    </div>
  

  </body>
</html>
